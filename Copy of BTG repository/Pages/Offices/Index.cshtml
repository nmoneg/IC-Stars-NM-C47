@page
@model RTWPortal.Pages.Offices.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
<style>
    table{
        border-collapse: collapse;
    }
    td,th{
        border: 1px solid #999;
        padding: 0.5rem;
    }
    
    .Tscroll {
        overflow-y: scroll;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</head>

<div class="text-center">
        <h2>Offices</h2>
</div>

<div style="margin-top:60px">

    <p><a asp-page="Create">New Office</a>&emsp;<a asp-page="/Analytics">Analytics</a>&emsp;<input  id="myInput" type="text" placeholder="Search.."></p>

<div class="Tscroll">
    
<table class="table table-striped table-bordered" style="margin-top:15px">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Office_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Location_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Services)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Market_Unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Street_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Zip_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Dress_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Tech_Support)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Additional_Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Visitors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Special_Considerations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Special_Consideration_Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office[0].Temp_Checks)
            </th>
        </tr>
    </thead>
    <tbody id="myTable">
@foreach (var item in Model.Office) {
        <tr>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Services)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Market_Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dress_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tech_Support)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Additional_Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visitors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Special_Considerations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Special_Consideration_Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temp_Checks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User_Count)
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
